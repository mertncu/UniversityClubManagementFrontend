<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.Label?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.mertncu.universityclubmanagementsystemfrontend.controller.UserHomeController"
            prefHeight="600.0" prefWidth="900.0">

    <left>
        <VBox spacing="10" alignment="TOP_CENTER" style="-fx-background-color: #f0f0f0;">
            <padding>
                <Insets top="20" left="10" right="10" bottom="20"/>
            </padding>
            <Button text="Tasks" onAction="#showTasks" prefWidth="100"
                    style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-background-radius: 5;"/>
            <Button text="Meetings" onAction="#showMeetings" prefWidth="100"
                    style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-background-radius: 5;"/>
            <Button text="Files" onAction="#showFiles" prefWidth="100"
                    style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-background-radius: 5;"/>
            <Button text="Events" onAction="#showEvents" prefWidth="100"
                    style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-background-radius: 5;"/>
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentPane" style="-fx-background-color: #ffffff;">
            <Label text="Welcome, Yener Mert Uncu!" style="-fx-font-size: 18; -fx-text-fill: #333333;"/>
        </StackPane>
    </center>

</BorderPane>
